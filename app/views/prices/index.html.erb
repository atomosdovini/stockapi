<p id="notice"><%= notice %></p>

<h1>Prices</h1>

<table>
  <thead>
    <tr>
      <th>Open price</th>
      <th>Highest price</th>
      <th>Lowest price</th>
      <th>Volume</th>
      <th>Close price</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= price.open_price %></td>
        <td><%= price.highest_price %></td>
        <td><%= price.lowest_price %></td>
        <td><%= price.volume %></td>
        <td><%= price.close_price %></td>
        <td><%= price.date %></td>
        <td><%= link_to 'Show', price %></td>
        <td><%= link_to 'Edit', edit_price_path(price) %></td>
        <td><%= link_to 'Destroy', price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

